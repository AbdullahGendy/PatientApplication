<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/shape_edit_text_background</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_height">@dimen/_45_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="MyCustomTabText" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@color/colorPrimaryDark</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="color">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>

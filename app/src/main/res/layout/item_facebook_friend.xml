<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:background="@drawable/shape_edit_text_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/_4ssp"
    android:weightSum="100">

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/_55sdp"
        android:layout_weight="20"
        android:gravity="center">

        <ImageView
            android:id="@+id/facebook_friends_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp" />
    </LinearLayout>


    <com.company.patientapplication.Utills.MyTextViewBold
        android:id="@+id/facebook_friend_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="72"

        android:gravity="left"
        android:padding="@dimen/_4sdp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_11ssp" />


</LinearLayout>
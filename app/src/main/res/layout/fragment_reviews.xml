 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.company.patientapplication.Utills.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Review the Doctor"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_25ssp" />

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/simple_rating_bar_review_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:focusable="false"
            android:gravity="center"
            app:srb_borderColor="@color/colorPrimaryDark"
            app:srb_fillColor="@color/colorPrimaryDark"
            app:srb_gravity="left"
            app:srb_isIndicator="false"
            app:srb_numberOfStars="5"
            app:srb_starBorderWidth="5"
            app:srb_starCornerRadius="3"
            app:srb_starsSeparation="@dimen/_7sdp"
            app:srb_stepSize="1" />

        <com.company.patientapplication.Utills.MyEditText
            android:id="@+id/text_view_review_comment"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10_height"
            android:drawableStart="@drawable/email"
            android:hint="Leave a Comment"
            android:inputType="textEmailAddress" />

        <com.company.patientapplication.Utills.ButtonBold
            android:id="@+id/review_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10_height"
            android:background="@drawable/shape_login_background"
            android:gravity="center"
            android:text="Review"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>